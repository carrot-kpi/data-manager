{
    "type": "module",
    "private": true,
    "name": "@carrot-kpi/w3up-uploader",
    "version": "0.1.0",
    "author": "Federico Luzzi <federico.luzzi@carrot-labs.xyz>",
    "license": "GPL-3.0-or-later",
    "description": "A service to facilitate data uploads to web3.storage through their w3up service.",
    "scripts": {
        "prepare": "husky install",
        "commitlint": "commitlint -e",
        "lint": "eslint --ext .js ./ && prettier --check './**/*.{json,md}'",
        "format": "eslint --fix --ext .js ./ && prettier --write './**/*.{json,md}'",
        "build": "esbuild ./src/index.js --platform=node --define:process.env.NODE_ENV=\\\"production\\\" --bundle --minify --outdir=./out",
        "start": "node src/index.js"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.4",
        "@commitlint/config-conventional": "^18.4.4",
        "@hapi/inert": "^7.1.0",
        "@hapi/vision": "^7.0.2",
        "dotenv": "^16.3.1",
        "esbuild": "^0.19.11",
        "eslint": "^8.44.0",
        "eslint-config-custom": "*",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "hapi-swagger": "^17.0.1",
        "husky": "^8.0.1",
        "prettier": "^3.2.2",
        "rimraf": "^5.0.0"
    },
    "dependencies": {
        "@hapi/boom": "^10.0.1",
        "@hapi/hapi": "^21.3.2",
        "@web3-storage/w3up-client": "^12.0.0",
        "hapi-pino": "^12.1.0",
        "joi": "^17.9.2"
    }
}
